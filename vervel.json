{
    "version": 2,
    "public": false,
    "github": {
        "enabled": true,
        "silent": true,
        "autoJobCancelation": true
    },
    "headers": [
        {
            "source": "/(.*)",
            "headers": [
                {
                    "key": "access-control-allow-origin",
                    "value": "https://chatfood-cdn.s3.eu-central-1.amazonaws.com"
                }
            ]
        }
    ],
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "https://chatfood-cdn.s3.eu-central-1.amazonaws.com/fe-code-challenge-1/$1"
        },
        {
            "source": "/(.*)",
            "destination": "/index.html"
        }
    ]
}
