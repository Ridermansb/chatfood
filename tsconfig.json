{
    "compilerOptions": {
        "baseUrl": ".",
        "outDir": "./dist/",
        "removeComments": true,
        "preserveConstEnums": true,
        "isolatedModules": true,
        "noImplicitAny": true,
        //    "module": "es6",
        "target": "es5",
        //    "target": "next",
        "lib": [
            "dom",
            "dom.iterable",
            "esnext",
            "es5",
            "es2015.promise"
        ],
        "allowJs": true,
        "sourceMap": true,
//        "module": "commonjs",
//        "target": "es5",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "declaration": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "jsx": "react",
        "paths": {
            "@components/*": [
                "src/components/*"
            ],
            "@assets/*": [
                "src/assets/*"
            ],
            "@api": [
                "src/api/index.ts"
            ]
        },
        "types": [
            "jest",
            "node",
            "react",
            "react-dom",
            "@testing-library/jest-dom"
        ]
    },
    "include": ["src/**/*", "global.d.ts", "src/jest.setup.ts", "node_modules/jest-dom"],
    "exclude": [
        "node_modules",
        "dist",
        "**/*.test.ts"
    ]
}
